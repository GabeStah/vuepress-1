.theme-night
  // 提示框
  .custom-block
    &.tip, &.warning, &.danger, &.details
      background-color lighten($night-bgcolor, 15%)

      a
        color $accentColor

    &.warning
      color darken(#ffe564, 50%)

      .custom-block-title
        color darken(#ffe564, 40%)

    &.danger
      color darken(red, 30%)

      .custom-block-title
        color darken(red, 20%)

    &.details
      fontcolor()
